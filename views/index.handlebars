<div class="row mt-5 ml-5">
  <div class="col-2">
    <a class="navbar-brand" id="logo" href="/">E-commerce website</a>
  </div>

  <div class="col-10" style="text-align: center;">
    <h2>都市人的療癒雜貨店</h2>
  </div>
</div>

<div class="row ml-5 mt-5">
  <div class="col-2">
    <div class="nav flex-column">
      <div class="list-group">
        <a class="list-group-item list-group-item-action active" href="/" style="background-color: #0085a5">首頁</a>
      </div>
      {{#each categories}}
      <div class="list-group">
        <a class="list-group-item list-group-item-action" href="/Category/{{this.id}}">{{this.name}}</a>
      </div>
      {{/each}}
    </div>
  </div>

  <div class="index col-10 mb-5">
    <img src="https://blog.payoneer.com/wp-content/uploads/2014/10/Amazon-Buy-Box.png" style="width:1100px;"
      alt="image">
  </div>
</div>

<div class="row ml-5 mt-5">
  <div class="col-2"></div>

  <div class="col-10">
    <div class="row">
      {{#each categories}}
      <div class="col-5">
        <div class="mb-4 shadow-sm">
          <a href="/Category/{{this.id}}">
            <img class="card-img-top" src="{{this.image}}" alt="Card image cap" width="320px" height="250px">
          </a>
        </div>

        <p class="card-text mb-5" style="text-align:center;">
          <a class="categoryName" style="text-decoration: none;" href="/Category/{{this.id}}">{{this.name}}</a>
        </p>
      </div>
      {{/each}}
    </div>
  </div>
</div>