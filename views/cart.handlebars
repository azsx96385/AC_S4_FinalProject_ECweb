<div class="container">
  <div class="row bg-primary text-white">
    <h1>購物明細</h1>
  </div>

  {{#if cart.items}}
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">價格</th>
        <th scope="col">數量</th>
        <th scope="col">總價</th>
        <th scope="col">#</th>
      </tr>
    </thead>
    <tbody>
      {{#each cart.items}}
      <tr>
        <td>
          <div style="display: flow-root;">
            <img src="{{this.image}}" class="card-img" alt="..." style="height: 100px;width: auto;">
            <span>{{this.name}}</span>
          </div>
        </td>
        <td>
          <p>$ {{this.price}}</p>
        </td>
        <td>
          <div style="display: flex;">
            <form action="/cartItem/{{this.Cart_item.id}}/add" method="POST">
              <button type="submit" class="btn btn-sm btn-outline-secondary">+</button>
            </form>
            <span style="margin: 0 20px;">
              {{this.Cart_item.quantity}}
            </span>
            <form action="/cartItem/{{this.Cart_item.id}}/sub" method="POST">
              <button type="submit" class="btn btn-sm btn-outline-secondary">-</button>
            </form>
          </div>
        </td>
        <td> {{multiplicate this.price this.Cart_item.quantity }} </td>
        <td>
          <form action="/cartItem/{{this.Cart_item.id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-link">
              <i class="fas fa-trash"></i>
            </button>
          </form>
        </td>
      </tr>
      {{/each}}
      <tr>
        <td></td>
        <td></td>
        <td style="text-align: right;">
          <h2>Total: </h2>
        </td>
        <td>
          <h2>{{totalPrice}} 元</h2>
        </td>
        <td></td>
      </tr>
      <tr>
        <td></td>
        <td>
          {{#if loginUser}}
          <a href="/enterCoupon" class="btn btn-primary">使用coupon</a>
          {{else}}
          <a href="/users/login?redirect=/enterCoupon" class="btn btn-primary">使用coupon</a>
          {{/if}}


        </td>
        <td>
          {{#if loginUser}}
          <a href="/orderEdit" class="btn btn-primary">
            去買單
          </a>
          {{else}}
          <a href="/users/login?redirect=/orderEdit" class="btn btn-primary">
            去買單
          </a>
          {{/if}}
        </td>
        <td></td>
        <td></td>
      </tr>
    </tbody>
  </table>
  {{else}}
  <div class="alert alert-secondary" role="alert">
    你的購物車還是空的!! </div>
  <a href="/" class='btn btn-primary mt-5'>回到首頁</a>
  {{/if}}

</div>