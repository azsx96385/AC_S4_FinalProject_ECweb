<div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Price</th>
        <th scope="col">quantity</th>
        <th scope="col">Subtotal</th>
        <th scope="col">#</th>
      </tr>
    </thead>
    {{#if cart.items}}
    <tbody>
      {{#each cart.items}}
      <tr>
        <td>
          <div style="display: flow-root;">
            <img src="{{this.image}}" class="card-img" alt="..." style="height: 100px;width: auto;">
            <span>{{this.name}}</span>
          </div>
        </td>
        <td>
          <p>$ {{this.price}}</p>
        </td>
        <td>
          <div style="display: flex;">
            <form action="/cartItem/{{this.Cart_item.id}}/add" method="POST">
              <button type="submit" class="btn btn-sm btn-outline-secondary">+</button>
            </form>
            <span style="margin: 0 20px;">
              {{this.Cart_item.quantity}}
            </span>
            <form action="/cartItem/{{this.Cart_item.id}}/sub" method="POST">
              <button type="submit" class="btn btn-sm btn-outline-secondary">-</button>
            </form>
          </div>
        </td>
        <td>{{this.price}} * {{this.Cart_item.quantity}}</td>
        <td>
          <form action="/cartItem/{{this.Cart_item.id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-link">
              <i class="fas fa-trash"></i>
            </button>
          </form>
        </td>
      </tr>
      {{/each}}
      <tr>
        <td></td>
        <td></td>
        <td style="text-align: right;">
          <h2>Total: </h2>
        </td>
        <td>
          <h2>{{totalPrice}}</h2>
        </td>
        <td></td>
      </tr>
      {{#if loginUser }}

      <tr>
        <td></td>
        <td><a href="/enterCoupon" class="btn btn-primary">使用coupon</a></td>
        <td>
          <a href="/orderEdit" class="btn btn-primary">
            去買單
          </a></td>
        <td></td>
        <td></td>
      </tr>

      {{else}}
      <tr>
        <td></td>
        <td></td>
        <td>
          <a href="/users/logIn" class="btn btn-primary">
            登入
          </a></td>
        <td></td>
        <td></td>
      </tr>

      {{/if}}


    </tbody>
    {{else}}
    <div class="alert alert-secondary" role="alert">
      你的購物車還是空的!! </div>

    {{/if}}
  </table>
</div>