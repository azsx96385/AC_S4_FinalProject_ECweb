<div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Price</th>
        <th scope="col">quantity</th>
        <th scope="col">Subtotal</th>
        <th scope="col">#</th>
      </tr>
    </thead>
    {{#if cart.items}}
    <tbody>
      {{#each cart.items}}
      <tr>
        <td>
          <div style="display: flow-root;">
            <img src="{{this.image}}" class="card-img" alt="..." style="height: 100px;width: auto;">
            <span>{{this.name}}</span>
          </div>
        </td>
        <td>
          <p>$ {{this.price}}</p>
        </td>
        <td>
          <div style="display: flex;">
            <form action="/cartItem/{{this.CartItem.id}}/add" method="POST">
              <button type="submit" class="btn btn-sm btn-outline-secondary">+</button>
            </form>
            <span style="margin: 0 20px;">
              {{this.CartItem.quantity}}
            </span>
            <form action="/cartItem/{{this.CartItem.id}}/sub" method="POST">
              <button type="submit" class="btn btn-sm btn-outline-secondary">-</button>
            </form>
          </div>
        </td>
        <td>{{this.price}} * {{this.CartItem.quantity}}</td>
        <td>
          <form action="/cartItem/{{this.CartItem.id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-link">
              <i class="fas fa-trash"></i>
            </button>
          </form>
        </td>
      </tr>
      {{/each}}
      <tr>
        <td></td>
        <td></td>
        <td style="text-align: right;">
          <h2>Total: </h2>
        </td>
        <td>
          <h2>{{totalPrice}}</h2>
        </td>
        <td></td>
      </tr>
      {{else}}
      <div class="alert alert-secondary" role="alert">
        你的購物車還是空的!! </div>

      {{/if}}

    </tbody>
  </table>
  <form action="/order" method="post">
    <h1>運送資訊</h1>
    <div class="form_group row mt-4">
      <label class="col-2 ">名字:</label>
      <div class="col-10">
        <input type="text" class="form-control" value="{{user.name}}">
      </div>
    </div>
    <div class="form-group row mt-4">
      <label class="col-2 ">email:</label>
      <div class="col-10">
        <input type="email" class="form-control" value="{{user.email}}">
      </div>
    </div>
    <div class="form-group row mt-4">
      <label class="col-2 ">地址:</label>
      <div class="col-10">
        <input type="address" class="form-control" value="{{user.address}}">
      </div>
    </div>
    <div class="form-group d-flex  justify-content-between mt-4">
      <button type="submit" class='btn btn-primary'>結帳</button>
      <a href="/">取消訂單</a>
    </div>
  </form>
</div>